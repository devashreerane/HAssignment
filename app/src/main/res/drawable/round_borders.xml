<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" android:padding="20dp">
    <!-- you can use any color you want I used here gray color-->

    <!-- we define background color -->
    <solid android:color="#F6F4F4" />

    <!-- we define border color and thick -->
    <stroke
        android:width="1dp"
        android:color="#C8C9CA" />

    <!-- add some padding for text inside -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />

    <!-- we define corner radius, note that radius can be different for each corner -->
    <corners android:radius="10dp" />
</shape>